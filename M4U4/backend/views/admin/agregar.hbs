<div class="container" >
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post"
            enctype="multipart/form-data"> 
            <div class="mb-3">
                <input type="text" class="form- control" 
                placeholder="Titulo" name="titulo">
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control"
                placeholder="Subtitulo"
                name="subtitulo"></textarea>
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control"
                placeholder="Cuerpo" name="cuerpo"></textarea>
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control"
                placeholder="Enlace" name="enlace"></textarea>
            </div>
            <div class="form-group">
                <label>Imagen: <input type="file" name="imagen"
                id="imagen"/></label>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}