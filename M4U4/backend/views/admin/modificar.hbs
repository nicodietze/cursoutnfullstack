<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="mb-3">
                <input type="text" class="form- control" 
                placeholder="Titulo" value="{{novedad.titulo}}" name="titulo">
            </div>
            <div class="mb-3">
                <textarea class="form-control"
                placeholder="Subtitulo"
                name="subtitulo">{{novedad.subtitulo}}</textarea>
            </div>
            <div class="mb-3">
                <textarea class="form-control"
                placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
            </div>
            <div class="mb-3">
                <textarea class="form-control"
                placeholder="Enlace" name="enlace">{{novedad.enlace}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}