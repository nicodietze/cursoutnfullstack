<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{ usuario }} ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar
                    sesión
                    <i class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fa fa-plus">
                </i>Nuevo</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Título</th>
                    <th scope="col">Subtitulo</th>
                    <th scope="col">Cuerpo</th>
                    <th scope="col">Enlace</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
    </div>
</div>
<tbody>
    {{#each novedades}}
    <tr>
        <th scope="row">{{id}}</th>
        <td>{{titulo}}</td>
        <td>{{subtitulo}}</td>
        <td>{{cuerpo}}</td>
        <td>{{enlace}}</td>
        <td class="text-center">
            <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary">
                <i class="fa fa-pencil"></i></a>
            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-secondary">
                <i class="fa fa-trash"></i></a>
        </td>
    </tr>
    {{/each}}
</tbody>
</table>